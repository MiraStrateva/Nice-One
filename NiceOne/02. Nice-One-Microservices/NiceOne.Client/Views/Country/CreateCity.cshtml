@model NiceOne.Client.Models.Location.CityModel

@{
    ViewData["Title"] = "Create City";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create City</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateCity">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CountryId" class="control-label"></label>
                <select asp-for="CountryId"
                        class="form-control" id="CountryId" name="CountryId"
                        asp-items="@(new SelectList(@ViewBag.ListOfCountry, "Id", "Name"))"></select>
                <span asp-validation-for="CountryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Back to List of cities", "Cities", new { id = @Model.CountryId })
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
